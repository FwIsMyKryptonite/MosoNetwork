        function deleteRow() {
            //grid.deleteSelectedRow();
            //if (!confirm("确定删除?")) {
            //    return false;
            //}
            var gridManager = $("#managerInfoGrid").ligerGetGridManager();
            var rows = gridManager.getCheckedRows();
            if (rows.length != 0) {
                $.ligerDialog.confirm('确定要删除吗？', function (userClicked) {
                    if (userClicked) {
                        gridManager.deleteSelectedRow();
                    }
                });

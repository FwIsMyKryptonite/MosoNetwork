        function setManagerRole() {
            var rows = grid.getCheckedRows();
            //var nameId = "setManagerRole" + i;
            if (rows.length != 0) {
                tt = $.ligerDialog.open({
                    title: '为管理员分配角色',
                    //id:'actionInfo',//给LigerUI.Dialog对象创建Id属性
